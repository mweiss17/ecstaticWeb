doctype html
html(ng-app="ecstatic")
	head
		title= Ecstatic
		link(rel='stylesheet', href='stylesheets/app.css')
		script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.2.6/angular.min.js')
		script(src='js/socket.io-client/socket.io.js')
		script(src='js/ecstaticSocketsClient.js')
		script(src='js/app.js')
		script(src='js/countdown.js')

	body(ng-controller="mainController as main")
		.section
			.row
				.small-2.large-2.columns 
				.small-8.large-8.columns
					.block
					img('logo.png')
					h4.subtitle.big Next up
					h1(ng-bind="upcomingEvents.title") {{main.upcomingEvents.title}} 
					script.
						function display_countdown(start_time){
							countdown(start_time, function(ts){
								document.getElementById('counter').innerHTML = ts.toHTML();

							}, countdown.HOURS | countdown.MINUTES | countdown.SECONDS, 3);
						}
					span: img('icn-clock.png')
					ul 
						ul.inline-list
							p#counter 
				.small-2.large-2.columns
		.section
			.row
				.small-7.large-7.columns
					img(src='images/img-cover-holder-417-280.png')
					h3 Deepcast vol 34
					h5 by Mark Macleod from Freshbooks
					.left
						p 0:00
					.right
						p 9:99
					.progress
						span.meter

				.small-5.large-5.columns
					table
						tbody
							tr(ng-repeat="song in playlist") 
								td img
								td #
								td {{song.title}}
								td {{song.author}}
								td {{song.duration}}
								


